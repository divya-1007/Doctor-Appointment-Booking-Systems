        <!-- javascript -->
       {{>javascript}}
        
          <script>
         $(document).ready(function () {
             //Common form request
            $("#contactUsQueryMsg").submit(function (e) {
            
        e.preventDefault();
        var fromData = $(this).serialize();
        
         $.ajax({
            type: 'POST',
            url:$(this).attr('action'),
            data:fromData,
            success: function (response) {
             if(response.status ==200){   
            swal("Doctor Appointment Booking System  Congratulations Your Query is send ...✔️", 
            ''+response.message+'',
             "success");
             location.reload();
            }else{
            swal('Oops...',
                response.message,
                'error'
                );
            }
            }
         })
        })
         })
        </script>
