                <!--end row-->
                <div id="form-response">

                </div>
                <form action="/api/adminAddDoctor" method="post" id="change-password-form" class="mt-4">
                  <input type="hidden" name="token" value="{{token}}">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label class="form-label">First Name<span class="text-danger">*</span></label>
                        <input name="firstName" id="name" type="text" class="form-control" placeholder="First Name :" />
                      </div>
                    </div>
                    <!--end col-->

                    <div class="col-md-6">
                      <div class="mb-3">
                        <label class="form-label">Last Name<span class="text-danger">*</span></label>
                        <input name="lastName" id="name2" type="text" class="form-control" placeholder="Last Name :" />
                      </div>
                    </div>
                    <!--end col-->

                    <div class="col-md-6">
                      <div class="mb-3">
                        <label class="form-label">Your Email<span class="text-danger">*</span></label>
                        <input name="email" id="email" type="email" class="form-control" placeholder="Your email :" />
                      </div>
                    </div>
                    <!--end col-->

                    <div class="col-md-6">
                      <div class="mb-3">
                        <label class="form-label">Phone no.<span class="text-danger">*</span></label>
                        <input name="contactNumber" id="number" type="text" class="form-control" placeholder="Phone no. :" />
                      </div>
                    </div>
                    <!--end col-->
                       
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label class="form-label">Password<span class="text-danger">*</span></label>
                        <input name="password" id="number" type="text" class="form-control" placeholder="Password  :" />
                      </div>
                    </div>

                  </div>
                  <!--end row-->
                    <input type="hidden" type="text" name="role" value="doctor">
                  <button type="submit" class="btn btn-primary">Add Doctor</button>
                </form>
              </div>
            </div>
            <!--end col-->

            <div class="col-lg-4 mt-4">
              <div class="card rounded border-0 shadow">
                <div class="p-4 border-bottom">
                  <h5 class="mb-0">Doctors List</h5>
                </div>
                  
                <ul class="list-unstyled mb-0 p-4" data-simplebar style="height: 664px;">
                  {{#each details}}
                  <li class="d-md-flex align-items-center text-center text-md-start">
                    <img src="{{this.profilePicture}}" class="avatar avatar-medium rounded-md shadow" alt="" />

                    <div class="ms-md-3 mt-4 mt-sm-0">
                      <a href="#" class="text-dark h6">{{this.firstName}} {{this.lastName}}</a>
                      <p class="text-muted my-1">{{this.departmentName}}</p>
                      {{!-- <p class="text-muted mb-0"></p> --}}
                    </div>
                  </li>
                  {{/each}}
                  <li class="mt-4">
                    <a href="/adminDoctorList" class="btn btn-primary">All Doctors</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <!--end row-->
        </div>
      </div>
      <!--end container-->

      <!-- Footer Start -->
      <footer class="bg-footer py-4">
        {{>footerAdmin}}
      </footer>
