        <!-- javascript -->
        {{>javascript}}
        <script>
    
            $(document).on("click",".updateStatus",function(){
                var url = $(this).attr('data-url');
                var token =  $(this).attr('data-token')
                var ths = $(this)
                $.ajax({
                    type: 'GET',
                     url:url,
                    headers:{ Authorization: 'Bearer '+ token},
                    success: function (response) {
                        console.log(response)
                        if(response.status==200){
                            $(".modal").modal('hide');
                       $(ths).text(response.message);
                       location.reload();
                        }else{
                        $("#form-response").html('<div  class="alert alert-danger" role="alert">'+response.message+'</div>');   
                        }
                    }
                });
            })
    
             
            $(document).on("click",".patientsReviewDelete",function(){
                var url = $(this).attr('data-url');
                var token =  $(this).attr('data-token')
                $.ajax({
                    type: 'GET',
                     url:url,
                    headers:{ Authorization: 'Bearer '+ token},
                    success: function (response) {
                        console.log(response)
                        if(response.status==200){
                            $(".modal").modal('hide');
                        if(response.status==200){
                            swal({
                            title: "Success...!",
                            text: response.message,
                            icon: "success",
                            button: "Ok...!",
                            });
                        location.reload();
                        }else{
                            swal('Oops...',
                            response.message,
                            'error'
                            );  
                        }
                    }
                }
            })
            })

var source = $("#entry-template").html();
var template = Handlebars.compile(source);
var output = template(patientData2);
$("body").append(output);
        </script>
        
